# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf  # Unix-style
insert_final_newline = true

[{*.h,*.cpp,*.vert,*.frag,*.js,*.ts,*CMakeLists.txt,*.cmake}]
indent_style = tab
indent_size = 4

[{*.md,*.todo,*.py}]
indent_style = space
indent_size = 4
